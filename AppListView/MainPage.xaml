<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListView.MainPage">
    <StackLayout>
        <StackLayout Padding="10">
            <Button Text="Cadastrar"
                    Clicked="btnCadastrar_Clicked"
                    BackgroundColor="#333333"
                    FontSize="20"/>
            <Button Text="Atualizar"
                    Clicked="btnAtualizar_Clicked"
                    BackgroundColor="#333333"
                    FontSize="20"
                    Margin="0, 5"/>
        </StackLayout>
        <ListView x:Name="lsvLista">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame CornerRadius="10"
                               Padding="10"
                               Margin="5"
                               BackgroundColor="#414142">
                            <StackLayout Orientation="Horizontal">
                                <StackLayout Padding="10"
                                             HorizontalOptions="Fill">
                                    <Image Source="{Binding DirImagem}"
                                           HeightRequest="50"
                                           WidthRequest="50"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </StackLayout>
                                <StackLayout HorizontalOptions="FillAndExpand">
                                    <Label Text="{Binding Id}"/>
                                    <Label Text="{Binding Nome}"
                                           FontAttributes="Bold"
                                           FontSize="20"/>
                                    <StackLayout Orientation="Horizontal">
                                        <Label Text="Idade: "/>
                                        <Label Text="{Binding Idade}"
                                               Margin="5, 0"/>   
                                    </StackLayout>                                     
                                </StackLayout>
                                <StackLayout HorizontalOptions="End"
                                             Padding="5"
                                             Orientation="Horizontal">
                                    <Image Source="icon_eye.png"
                                           HeightRequest="30"
                                           WidthRequest="30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Tapped="tapVisualizar_Tapped"
                                                CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                    <Image Source="icon_trash.png"
                                           HeightRequest="30"
                                           WidthRequest="30">
                                        <Image.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Tapped="tapDeletar_Tapped"
                                                CommandParameter="{Binding .}"/>
                                        </Image.GestureRecognizers>
                                    </Image>
                                </StackLayout>
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>   
        </ListView>        
    </StackLayout>
</ContentPage>
